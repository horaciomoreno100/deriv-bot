# Deriv API Configuration
DERIV_APP_ID=1089
DERIV_API_TOKEN=your_token_here
DERIV_ENDPOINT=wss://ws.derivws.com/websockets/v3

# Gateway Configuration
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0

# Market Data Cache
MAX_TICKS_PER_ASSET=1000
MAX_CANDLES_PER_ASSET=500
ENABLE_PERSISTENCE=false

# Trader Configuration
GATEWAY_URL=ws://localhost:3000
AUTO_RECONNECT=true
MAX_RISK_PER_TRADE=0.02
MAX_OPEN_POSITIONS=3
MAX_DAILY_LOSS=0.10
MIN_CONFIDENCE=0.7
# FIXED_STAKE=10

# Database
DATABASE_URL_GATEWAY=file:./gateway.db
DATABASE_URL_TRADER=file:./trader.db

# Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Environment
NODE_ENV=development
