# Deriv API Configuration
DERIV_APP_ID=your_app_id
DERIV_API_TOKEN=your_api_token
DERIV_ENDPOINT=wss://ws.derivws.com/websockets/v3

# Gateway Configuration
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0

# Database Configuration
DATABASE_URL_GATEWAY=file:./prisma/dev.db

# Logging Configuration
LOG_LEVEL=info  # error, warn, info, debug
LOG_DIR=./logs

# Slack Alerts (Optional - for production monitoring)
# Create webhook at: https://api.slack.com/messaging/webhooks
# To DM a user: Create a channel with just you and the bot, get webhook for that channel
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ALERT_LEVELS=error,warn  # Comma-separated: error, warn, info, debug
